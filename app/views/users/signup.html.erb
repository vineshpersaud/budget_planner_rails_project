<h1>Users Signup</h1>

 <%= form_for  @user, controller: 'users', action: 'create'  do |f| %>

<%=f.label :name%>
<%= f.text_field :name %><br><br>

<%=f.label :email%>
<%= f.text_field :email%><br><br>


<%=f.label :password%>
<%= f.password_field :password%><br><br>

<%= f.submit "Create User" %>
<% end %>